
<% if current_user.friendships.find_by_friend_id(@user).nil? %>
  <% unless current_user.reverse_friendships.find_by_user_id(@user).nil? %>
    <%= form_for current_user.reverse_friendships.find_by_user_id(@user),
                 :html => { :method => :delete },
                 :remote => true do |f| %>
      <div class="actions"><%= f.submit "Unfriend" %></div>
    <% end %>
  <% end %>
<% else %>
  <%= form_for current_user.friendships.find_by_friend_id(@user),
               :html => { :method => :delete },
               :remote => true do |f| %>
    <div class="actions"><%= f.submit "Unfriend" %></div>
  <% end %>
<% end %>
