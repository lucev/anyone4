<h1>All users</h1>

<%= will_paginate %>

<ul class="users">
  <% @users.each do |user| %>
    <li><%= link_to user.name, user_path(user) %>&nbsp;
        <% unless user.friend_of? current_user or current_user? user %>
          <%= link_to 'add friend', request_friendship_path(:friend_id => user.id) %>
        <% end %>
    </li>
  <% end %>
</ul>

<%= will_paginate %>
