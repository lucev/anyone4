<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
  <%= stylesheet_link_tag 'style', :media => 'screen' %>

</head>
<body>

  <div class="container">
  
    <%= render 'layouts/header' %>
    
    <div id="section" class="round">
      <%= yield %>
    </div>
    
    <%= render 'layouts/footer' %>

    <div id="debug">
      <%= debug(params) if Rails.env.development? %>
    </div>
        
  </div>
</body>
</html>
