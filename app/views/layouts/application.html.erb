<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <%= stylesheet_link_tag 'style', 'calendrical', :media => 'screen' %>
  <%= javascript_include_tag "https://ajax.googleapis.com/ajax/libs/jquery/1.6.1/jquery.min.js" %>
  <%= javascript_include_tag "jquery.calendrical" %>
  <%= csrf_meta_tag %>
</head>
<body>

  <div class="container">

    <%= render 'layouts/header' %>

    <div id="section" class="round">
      <% flash.each do |key, value| %>
        <div class="flash_<%= key %>"><%= value %></div>
      <% end %>
      <%= yield %>
    </div>

    <%= render 'layouts/footer' %>

    <div id="debug">
      <%= debug(params) if Rails.env.development? %>
    </div>

  </div>
</body>
</html>

