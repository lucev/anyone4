<% @user ||= current_user %>
<div class="stats">
  <table summary="User stats">
    <tr>
      <td>
        <a href="<%= friends_path %>">
          <span id="friends" class="stat">
            <%= @user.friends.count + @user.reverse_friends.count %> friends
          </span>
        </a>
      </td>
    </tr>
  </table>
</div>

